<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>CD Organizer</title>
    <link 
      rel="stylesheet" 
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" 
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" 
      crossorigin="anonymous">
  </head>
  <body>
    @using CdOrganizer.Models;

   <h1><u>Your Collection</u></h1>
   
   @if (Model.Count == 0)
   {
    <h3>No CD's have been added to your collection</h3>
   }
  <ul>
   @foreach (Record record in Model)
   {
    <li><a href='/records/@record.Id'>@record.Title</a></li>
   }
 </ul>
   <p><a href='/records/new'>Add a Cd</a></p>
   <p><a href='/'>Back home</a></p>
  </body>
</html>